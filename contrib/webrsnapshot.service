[Unit]
Description=Web based graphical interface for rsnapshot
Requires=network.target
After=network.target

[Service]
WorkingDirectory=/opt/webrsnapshot
SyslogIdentifier=webrsnapshot
Type=simple
PIDFile=/opt/webrsnapshot/script/hypnotoad.pid
ExecStart=hypnotoad -f /opt/webrsnapshot/script/webrsnapshot
ExecStop=hypnotoad -s /opt/webrsnapshot/script/webrsnapshot
ExecReload=/usr/bin/kill -USR2 $MAINPID
Restart=on-failure

[Install]
WantedBy=multi-user.target
